<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Able 3 Authenticator"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- OTP Text -->
        <TextView
            android:id="@+id/otpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="OTP: 00 00 00"
            android:textSize="20sp" />

        <!-- Label -->
        <TextView
            android:id="@+id/otpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/otpText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="For one-time use only!"
            android:textSize="16sp" />

        <!-- Countdown Label -->
        <TextView
            android:id="@+id/countdownLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="Auth code expires in:"
            android:textSize="18sp" />

        <!-- Countdown Timer -->
        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/countdownLabel"
            android:layout_centerHorizontal="true"
            android:text="10 seconds"
            android:textSize="18sp" />

        <!-- Copy Button -->
        <Button
            android:id="@+id/copyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Copy Authcode" />
    </RelativeLayout>
</LinearLayout>